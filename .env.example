# Port number
PORT=PORT_NUMBER_GOES_HERE

# Google Gemini API Key
GOOGLE_API_KEY=API_KEY_GOES_HERE

# OpenAI API Key
OPENAI_API_KEY=API_KEY_GOES_HERE

# Amadeus Travel API Credentials (OAuth2 - token auto-refreshes)
AMADEUS_CLIENT_ID=CLIENT_ID_GOES_HERE
AMADEUS_CLIENT_SECRET=CLIENT_SECRET_GOES_HERE
AMADEUS_GRANT_TYPE=client_credentials

# Toggle flight data source: "true" for Amadeus API, "false" for LLM-generated data
USE_FLIGHT_API=false
